<%
  nats_ips = nil
  if_p("nats.machines") { |ips| nats_ips = ips }

  unless nats_ips
    nats_ips = link("nats").instances.map(&:address)
  end
%>

net: "<%= spec.address %>"
port: <%= p("nats.port") %>
prof_port: <%= p("nats.prof_port") %>
monitor_port: <%= p("nats.monitor_port") %>

debug: <%= p("nats.debug") %>
trace: <%= p("nats.trace") %>
logtime: true

authorization {
  user: "<%= p("nats.user") %>"
  password: "<%= p("nats.password") %>"
  timeout: <%= p("nats.authorization_timeout") %>
}

cluster {
  host: "<%= spec.address %>"
  port: <%= p("nats.cluster_port") %>

  authorization {
    user: "<%= p("nats.user") %>"
    password: "<%= p("nats.password") %>"
    timeout: <%= p("nats.authorization_timeout") %>
  }

  <% if p("nats.internal.tls.enabled") -%>
  tls {
    ca_file: "/var/vcap/jobs/nats/config/internal_tls/ca.pem"
    cert_file: "/var/vcap/jobs/nats/config/internal_tls/certificate.pem"
    key_file: "/var/vcap/jobs/nats/config/internal_tls/private_key.pem"
    cipher_suites: [
      "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
    ]
    curve_preferences: [
      "CurveP384"
    ]
    timeout: 5 # seconds
    verify: true
  }
  <% end -%>

  routes = [
    <% nats_ips.each do |address| %>
    nats-route://<%= p("nats.user") %>:<%= p("nats.password") %>@<%= address %>:<%= p("nats.cluster_port") %>
    <% end %>
  ]
}
